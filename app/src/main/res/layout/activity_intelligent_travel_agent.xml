<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".IntelligentTravelAgent" android:orientation="vertical">



        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/main_context"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:id="@+id/main_city"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:src="@drawable/img_wellington_top" />
                <TextView
                    android:paddingBottom="10dp"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:layout_alignTop="@id/main_city"
                    android:layout_alignLeft="@id/main_city"
                    android:layout_alignRight="@id/main_city"
                    android:layout_alignEnd="@id/main_city"
                    android:layout_alignStart="@id/main_city"
                    android:layout_alignBottom="@id/main_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_wellington"/>
                <ImageView
                    android:layout_below="@id/main_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_search"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    />
                <TableLayout
                    android:layout_below="@id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView

                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:id="@+id/main_recommendation_1"
                            android:padding="5dp"

                            android:src="@drawable/img_tepapa_reco" />
                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:id="@+id/main_recommendation_2"
                            android:padding="5dp"
                            android:src="@drawable/img_zealandia_reco" />
                    </TableRow>
                    <TableRow>
                        <ImageView

                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="100dp"
                            android:id="@+id/main_recommendation_3"
                            android:padding="5dp"
                            android:src="@drawable/img_botanicalgarden_reco" />
                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:id="@+id/main_recommendation_4"
                            android:padding="5dp"
                            android:src="@drawable/img_wellingtonzoo_reco" />
                    </TableRow>
                </TableLayout>
