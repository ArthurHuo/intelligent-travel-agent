            android:name=".IntelligentTravelAgent"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.PlanSearch"
            android:label="@string/title_activity_plan_search" >
        </activity>
        <activity
            android:name=".View.PlanSetting"
            android:label="@string/title_activity_plan_setting" >
        </activity>
        <activity
            android:name=".View.PlanResult"
            android:label="@string/title_activity_plan_result" >
        </activity>
        <activity
            android:name=".View.PlanList"
            android:label="@string/title_activity_plan_list" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
